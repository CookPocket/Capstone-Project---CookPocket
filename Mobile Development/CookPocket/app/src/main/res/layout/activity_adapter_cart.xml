<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.adapter.AdapterCartActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tambah_kurang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:backgroundTint="@color/grey_soft_smooth"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Gambar Makanan -->
            <ImageView
                android:id="@+id/img_food_cart"
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:src="@drawable/placeholder_foto_makanan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Nama Makanan -->
            <TextView
                android:id="@+id/tv_nama_makanan_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/nama_makanan"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/img_food_cart"
                app:layout_constraintStart_toEndOf="@+id/img_food_cart"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Harga Makanan -->
            <TextView
                android:id="@+id/tv_harga_makanan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/rp_0"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_nama_makanan_cart"
                app:layout_constraintStart_toEndOf="@+id/img_food_cart"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Tombol - -->
            <ImageView
                android:id="@+id/btn_minus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_add"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/minus"
                android:src="@drawable/baseline_mines"
                app:layout_constraintEnd_toStartOf="@+id/tv_quantity_cart"
                app:layout_constraintTop_toBottomOf="@+id/tv_harga_makanan" />

            <!-- Jumlah Pesanan -->
            <TextView
                android:id="@+id/tv_quantity_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/_0"
                android:layout_marginTop="18dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_plus_cart"
                app:layout_constraintTop_toBottomOf="@+id/tv_harga_makanan" />

            <!-- Tombol + -->
            <ImageView
                android:id="@+id/btn_plus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_add"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/plus"
                android:src="@drawable/baseline_add_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_harga_makanan" />

            <!-- Tombol Submit -->
            <Button
                android:id="@+id/btn_submit_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/orange"
                android:text="@string/submit"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_plus_cart" />

            <!-- Tombol Reset -->
            <Button
                android:id="@+id/btn_reset_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/orange"
                android:text="@string/reset"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_submit_cart"
                app:layout_constraintTop_toBottomOf="@+id/btn_minus_cart" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
